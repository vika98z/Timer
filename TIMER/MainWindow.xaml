<Window x:Class="TIMER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TIMER"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="comboBox" Margin="30,55,512,0" VerticalAlignment="Top" KeyDown="comboBox_KeyDown" IsEditable="True">
            <TextBlock>-</TextBlock>
        </ComboBox>
        <ListBox Name="listBox" Margin="509,55,33,270"/>
        <Label Content="Результаты" Margin="542,24,138,0" VerticalAlignment="Top"/>
        <Label Name="label1" Content="0:0" FontSize="90" Padding="50" Margin="0,100,0,110" FontFamily="Arial" HorizontalAlignment="Center"/>
        <Button Name="button" Content="Старт" HorizontalAlignment="Left" Margin="356,333,0,0" VerticalAlignment="Top" Width="76" RenderTransformOrigin="0.224,-0.025" Click="Button_Click"/>
        <Menu Height="25" VerticalAlignment="Top">
            <MenuItem Header="Command">
                <MenuItem x:Name="clear1" Header="Clear" Click="clear1_Click"/>
                <Separator />
                <MenuItem x:Name="exit1" Header="Exit" Click="exit1_Click"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
